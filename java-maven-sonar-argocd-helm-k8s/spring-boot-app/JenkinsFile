pipeline {
  agent any
  
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        git branch: 'main', url: 'https://github.com/Manasa2835/Jenkins-Zero-To-Hero.git'      
      }
    }   
    
 stage('Build') {
            steps {
                script {
                    sh 'pwd'
                    sh 'ls -l'
                    sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
                    sh 'ls -l target'
                }
            }
        }
  }
}
